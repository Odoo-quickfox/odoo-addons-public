<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="incident_team_view_list" model="ir.ui.view">
        <field name="name">incident.team.view.list</field>
        <field name="model">incident.team</field>
        <field name="arch" type="xml">
            <list >
                <field name="name"/>
                <field name="manager_id"/>
                <field name="department_id"/>
                <field name="create_uid"/>
            </list>
        </field>
    </record>

    <record id="incident_team_view_search" model="ir.ui.view">
        <field name="name">incident.team.view.search</field>
        <field name="model">incident.team</field>
        <field name="arch" type="xml">
           <search string="Teams">
                <field name="name"/>
                <field name="manager_id"/>
                <field name="create_uid"/>
                <field name="create_date"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <filter string="My Teams" domain="['|','|',('members_ids','in',[uid]),('manager_id','in',[uid]),('create_uid','in',[uid])]" help="My Teams" name="my_team"/>
                <group expand="0" string="Group By...">
                    <filter name="group_manager" string="Manager" icon="terp-product" context="{'group_by':'manager_id'}"/>
                    <filter name="group_date" string="Month" icon="terp-product" context="{'group_by':'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="incident_team_view_form" model="ir.ui.view">
        <field name="name">incident.team.view.form</field>
        <field name="model">incident.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <sheet>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" invisible="active == True"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"  class="oe_stat_button" icon="fa-archive">
                            <div class="o_stat_info">
                                <field name="active" readonly="1" invisible="True"/>
                                <span class="o_stat_text text-danger" invisible="active == False">Archive</span>
                                <span class="o_stat_text text-success" invisible="active == True">Restore</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="projects_action" icon="fa-puzzle-piece">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="incidents_count"/>
                                </span>
                                <span class="o_stat_text">
                            Incidents
                        </span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>                
                    <group >
                        <group name="team_details">
                            <field name="active" invisible="1"/>
                            <field name="manager_id" options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
                            <field name="create_uid" string="Created By"  readonly="1" invisible="create_uid == False" options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
                        </group>
                        <group name="team_info">
                            <field name="department_id" help="Selected Manager's department will auto-populate here."/>
                            <field name="parent_id" options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
                        </group>
                    </group>
                     <notebook>
                        <page string="Team Members" name="members">
                            <group>
                            <field name="members_ids" widget="many2many_tags_avatar" options="{'no_create_edit': True, 'no_open': True, 'no_quick_create':True}"/>
                            </group>
                        </page>
                         <page name="child_teams" string="Child Teams">

                            <field name="child_ids">

                                <list string="Teams">
                                    <field name="name"/>
                                    <field name="manager_id"/>
                                    <field name="create_uid"/>
                                </list>

                                <form string="Team">
                                    <sheet>
                                        <div class="oe_button_box" name="button_box">
                                            <button class="oe_stat_button" type="object" name="projects_action" icon="fa-puzzle-piece" invisible="incidents_count == 0">
                                                <div class="o_stat_info">
                                                    <span class="o_stat_value">
                                                        <field name="incidents_count"/>
                                                    </span>
                                                    <span class="o_stat_text">
                                                    Incidents
                                                </span>
                                                </div>
                                            </button>
                                        </div>
                                        <div class="oe_title">
                                            <h1>
                                                <field name="name" placeholder="Team Name"/>
                                            </h1>
                                        </div>
                                        <group>
                                            <group name="team_details">
                                                <field name="manager_id" options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
                                                <field name="create_uid" string="Created By" readonly="1" attrs="{'invisible':[('create_uid','=',False)]}" options="{'no_create_edit': True, 'no_open':True,'no_create':True}"/>
                                            </group>
                                            <group name="team_info">
                                                <field name="department_id"/>
                                                <field name="parent_id" options="{'no_create_edit': True, 'no_open':True,'no_create':True}" attrs="{'invisible':[('parent_id','=',False)]}"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Team Members" name="members">
                                              <group>
                                                <field name="members_ids" widget="many2many_tags_avatar" options="{'no_create_edit': True, 'no_open': True, 'no_quick_create':True}"/>
                                                </group>
                                            </page>
                                            <page name="child_teams" string="Child Teams" attrs="{'invisible':[('parent_id','=',False)]}">
                                                <field name="child_ids">
                                                    <list string="Teams">
                                                        <field name="name"/>
                                                        <field name="manager_id"/>
                                                        <field name="department_id"/>
                                                        <field name="create_uid"/>
                                                    </list>
                                                </field>
                                            </page>
                                        </notebook>
                                        <label for="description"/>
                                        <div>
                                            <field name="description" placeholder="Describe about team in details..."/>
                                        </div>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        
                    </notebook>

                    <label for="description"/>
                    <div>
                        <field name="description" placeholder="Describe about team in details..."/>
                    </div>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="incident_mgmt_team_incident_action" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">incident.team</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_team':1}</field>
    </record>

</odoo>